<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Activity_Config">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goCamera"
        android:text="Go To Camera"
        android:padding="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/goCamera"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_receivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receivers_text" />

        <Spinner
            android:id="@+id/spinner_receivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/receivers" />
    </LinearLayout>

</RelativeLayout>